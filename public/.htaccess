<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Serve static files directly - don't rewrite these
  RewriteRule ^robots\.txt$ robots.txt [L]
  RewriteRule ^sitemap\.xml$ sitemap.xml [L]
  RewriteRule ^favicon\.png$ favicon.png [L]
  RewriteRule ^logo\.png$ logo.png [L]
  
  # Don't rewrite if the file exists (fixes JS/CSS/images)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Don't rewrite assets folder
  RewriteRule ^assets/ - [L]
  RewriteRule ^images/ - [L]
  
  # Single Page Application routing - only for non-existent files
  RewriteRule ^ index.html [L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
  Header set X-Frame-Options "DENY"
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Correct MIME types
<IfModule mod_mime.c>
  AddType application/xml .xml
  AddType text/plain .txt
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/xml "access plus 1 day"
</IfModule>
